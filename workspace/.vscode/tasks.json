{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ROS: catkin_make",
            "type": "shell",
            "command": "source /opt/ros/$ROS_DISTRO/setup.bash && catkin_make",
            "args": ["-DCMAKE_BUILD_TYPE=Debug"],
            "problemMatcher": ["$catkin-gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}